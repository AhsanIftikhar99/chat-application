{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src", // Set baseUrl to the src directory
    "paths": {
      "@/*": ["./*"] // Map @/ to the src directory
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/common/MessageEditor/index.tsx", "src/common/MessageEditor/Editor.js", "src/hooks/usePost.ts", "src/middleware.ts"],
  "exclude": ["node_modules"]
}